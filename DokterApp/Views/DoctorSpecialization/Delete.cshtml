@model DokterApp.Models.DoctorSpecialization

@{
    ViewData["Title"] = "Delete";
}

<h1>Hapus Dokter</h1>

<h3>Yakin Ingin Menghapus?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nama)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nik)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nik)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tanggal_lahir)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tanggal_lahir)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tempat_lahir)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tempat_lahir)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.jenis_kelamin)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.jenis_kelamin)*@
            @if(Model.jenis_kelamin == 1)
            {
                <span>Laki-Laki</span>
            }
            else
            {
                <span>Perempuan</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.spesialisasi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.spesialisasi)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Hapus" class="btn btn-danger" /> |
        <a asp-action="Index">Kembali</a>
    </form>
</div>
