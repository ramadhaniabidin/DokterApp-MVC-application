@model DokterApp.Models.JadwalDokter

@{
    ViewData["Title"] = "Edit";
    IEnumerable<Poli> listPoli = ViewData["ListPoli"] as IEnumerable<Poli>;
}

<h1>Edit Jadwal Dokter</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditJadwal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
@*            <div class="form-group">
                <label asp-for="nama" class="control-label"></label>
                <select asp-for="nama" class="form-control form-select">
                    <option value="1">Poli Umum</option>
                    <option value="2">Poli Penyakit Dalam</option>
                    <option value="3">Poli Gigi</option>
                </select>
            </div>*@
            <div class="form-group">
                <label asp-for="nama_poli" class="control-label"></label>
                <select asp-for="nama_poli" class="form-control form-select">
                    <option disabled hidden selected>--Poli--</option>
                    @foreach (var poli in listPoli)
                    {
                        <option value="@poli.id">@poli.nama</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="hari" class="control-label"></label>
                <select asp-for="hari" class="form-control form-select">
                    <option value="Senin">Senin</option>
                    <option value="Selasa">Selasa</option>
                    <option value="Rabu">Rabu</option>
                    <option value="Kamis">Kamis</option>
                    <option value="Jumat">Jumat</option>
                    <option value="Sabtu">Sabtu</option>
                    <option value="Minggu">Minggu</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("Index", "DoctorSpecialization")">Ke Daftar Dokter</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
