@model DokterApp.Models.Poli

@{
    ViewData["Title"] = "Edit";
    IEnumerable<Poli> listPoli = ViewData["ListPoli"] as IEnumerable<Poli>;
}

<h1>Edit</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditJadwal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nama" class="control-label"></label>
                <input asp-for="nama" class="form-control" />
                <span asp-validation-for="nama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lokasi" class="control-label"></label>
                <input asp-for="lokasi" maxlength="11" class="form-control" />
                <span asp-validation-for="lokasi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("Index", "DoctorSpecialization")">Ke Daftar Dokter</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
